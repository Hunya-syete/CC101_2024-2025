name = input("Enter your name: ")
age = input("Enter your age: ")
sport = input("Enter your sport: ")

# Use an f-string to format the output
print(f"Hello, {name}! You are {age} years old and you love to play {sport}.")

item = "banana"
count = 7

# Using the .format() method
sentence = "I bought {} {} today.".format(count, item)
print(sentence)

city = "Dapitan"
temperature = 24
# Using the % operator
print("The temperature in %s is %d degrees Celsius." % (city, temperature))
